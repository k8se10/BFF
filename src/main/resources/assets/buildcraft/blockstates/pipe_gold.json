{
  "multipart": [
    {
      "apply": {
        "model": "buildcraft:block/pipe_gold/core"
      }
    },
    {
      "when": {
        "north": true
      },
      "apply": {
        "model": "buildcraft:block/pipe_gold/arm"
      }
    },
    {
      "when": {
        "south": true
      },
      "apply": {
        "model": "buildcraft:block/pipe_gold/arm",
        "y": 180
      }
    },
    {
      "when": {
        "east": true
      },
      "apply": {
        "model": "buildcraft:block/pipe_gold/arm",
        "y": 90
      }
    },
    {
      "when": {
        "west": true
      },
      "apply": {
        "model": "buildcraft:block/pipe_gold/arm",
        "y": 270
      }
    },
    {
      "when": {
        "up": true
      },
      "apply": {
        "model": "buildcraft:block/pipe_gold/arm_up"
      }
    },
    {
      "when": {
        "down": true
      },
      "apply": {
        "model": "buildcraft:block/pipe_gold/arm_down"
      }
    }
  ]
}